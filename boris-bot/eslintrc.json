{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "linebreak-style": ["error", "unix"],
    "no-eval": ["error"],
    "eqeqeq": ["error"],
    "no-unused-expressions": 1,
    "no-useless-constructor": 1,
    "no-debugger": 1,
    "no-unused-vars": 1
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "parser": "babel-eslint",
  "plugins": [],
  "globals": {
    "NamedNodeMap": false,
    "Element": false
  }
}
